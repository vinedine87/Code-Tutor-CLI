{
  "name": "code-tutor-cli",
  "version": "0.1.3",
  "description": "Code Tutor CLI: 학습/연습/도우미 도구 (Ollama 연동)",
  "keywords": [
    "cli",
    "tutor",
    "ollama",
    "ai",
    "chat",
    "coding"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://example.com/your/repo.git"
  },
  "bugs": {
    "url": "https://example.com/your/repo/issues"
  },
  "homepage": "https://example.com/your/repo#readme",
  "bin": {
    "ct": "bin/ct.js"
  },
  "files": [
    "bin/",
    "src/",
    "README.md",
    "docs/"
  ],
  "type": "commonjs",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "node bin/ct.js --help",
    "build:pkg": "pkg -o dist/ct -t node20-win-x64,node20-linux-x64,node20-macos-x64,node20-macos-arm64 .",
    "lint": "echo 'lint stub'",
    "test": "echo 'no tests yet'",
    "prepare": "echo 'husky not configured'",
    "postinstall": "node scripts/postinstall.js || true"
  },
  "dependencies": {
    "axios": "^1.7.4",
    "chalk": "^4.1.2",
    "commander": "^12.1.0",
    "@xenova/transformers": "^2.17.2",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.15",
    "ora": "^5.4.1"
  },
  "optionalDependencies": {
    "node-llama-cpp": "^3.0.0"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  },
  "pkg": {
    "assets": [
      "docs/**/*",
      "templates/**/*"
    ],
    "targets": [
      "node20-win-x64",
      "node20-linux-x64",
      "node20-macos-x64",
      "node20-macos-arm64"
    ]
  },
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
